<div class="new-comment-form">
  <%= form_for @comment, url: {action: 'create'} do |f| %>
  <div class="form-group">
    <%= f.label '', 'Title', class: 'small' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label '', 'Body*', class: 'small' %>
    <%= f.text_area :body, class: 'form-control', rows: 4 %>
  </div>
  <div class="new-comment-errors">
  </div>
  <%= f.submit 'Add Comment', class: 'btn btn-primary btn-block btn-sm' %>
  <% end %>
</div>
