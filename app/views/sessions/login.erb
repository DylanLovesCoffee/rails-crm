<h1>Log Me In</h1>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag('/authenticate', method: 'post') do %>
  <%= label_tag('Email') %>
  <%= email_field_tag(:email) %>
  <br>
  <%= label_tag('Password') %>
  <%= password_field_tag(:password) %>
  <br>
  <%= submit_tag('Login') %>
<% end %>
