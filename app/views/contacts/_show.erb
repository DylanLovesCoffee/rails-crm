<div class="list-group-item">
  <div class="row">
    <div class="col">
      <small><%= contact.name %></small>
      <% if contact.decision_maker == true %>
        <small>(<strong>DM</strong>)</small>
      <% end %>
    </div>
    <div class="col">
      <small><%= contact.role %></small>
    </div>
    <div class="col">
      <small><a href="mailto:<%= contact.email %>"><%= contact.email %></a></small>
    </div>
    <div class="col">
      <small><%= contact.phone %></small>
    </div>
    <div class="col">
      <small><%= link_to "Edit", edit_user_client_contact_path(contact.client.user, contact.client, contact) %> | </small>
      <small><%= link_to "Delete", user_client_contact_path(contact.client.user, contact.client, contact), method: 'delete' %></small>
    </div>
  </div>
</div>
