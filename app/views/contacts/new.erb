<div class="new-contact-container">
  <div class="new-contact-form">
    <%= form_for @contact, url: { action: 'create'} do |f| %>
    <div class="form-group">
      <%= f.label '', 'Name*', class: 'small' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Role*', class: 'small' %>
      <%= f.text_field :role, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Email*', class: 'small'  %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Phone*', class: 'small' %>
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label '', 'Decision Maker*', class: 'small' %>
      <%= f.radio_button :decision_maker, true, class: 'form-control' %>
      <%= f.label '', 'Yes', class: 'small' %>
      <%= f.radio_button :decision_maker, false, class: 'form-control' %>
      <%= f.label '', 'No', class: 'small' %>
    </div>
    <%= f.submit 'Create Contact', class: 'btn btn-primary btn-sm btn-block' %>
    <% end %>
  </div>
</div>
